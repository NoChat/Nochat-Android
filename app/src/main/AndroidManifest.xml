<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nexters.nochat" >
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!--GCM관련 permission-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <permission android:name="com.nexters.nochat.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.nexters.nochat.permission.C2D_MESSAGE" />

    <!--디바이스 아이디 가져오기 권한-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!--인터넷 접근 권한-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <!--GCM관련 permission-->
        <receiver
            android:name=".GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.nexters.nochat" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddressBookListActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".FriendsListActivity">
        </activity>
        <activity
            android:name=".MemberShipActivity">
        </activity>
        <activity
            android:name=".CertifyActivity">
        </activity>
        <activity
            android:name=".ReCertifyActivity">
        </activity>
        <activity
            android:name=".LoginActivity">
        </activity>
        <activity
            android:name=".showMsg">
        </activity>
        <activity
            android:name=".showMsgResponse">
        </activity>
    </application>
</manifest>

