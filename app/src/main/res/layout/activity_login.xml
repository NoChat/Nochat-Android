<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundgray">

    <Button
        android:id="@+id/backMain2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_close"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|top"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/membershipTitle2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="친구끼리 무슨말이 필요해? \n 간단한 가입으로 친구와 소통하세요"
            android:textColor="@color/uwhite"
            android:lines="2"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|top"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/memberShipId2"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/uline"
            android:hint="아이디 입력(영문)"
            android:singleLine="true"
            android:gravity="center"
            android:textColor="@color/gray"
            android:ems="10"

            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/memberShipPassword2"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/uline"
            android:inputType="textPassword"
            android:singleLine="true"
            android:hint="비밀번호 입력"
            android:gravity="center"
            android:ems="10"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|top"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/certifyCheck2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="*아이디 또는 비밀번호를 확인해 주십시오."
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/red"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/memberShipBtn2"
            android:layout_gravity="center_horizontal|center"
            android:layout_width="fill_parent"
            android:layout_marginTop="20dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_selector"
            android:text="노챗 시작하기"
            android:textColor="@color/uwhite"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

    </LinearLayout>
</LinearLayout>